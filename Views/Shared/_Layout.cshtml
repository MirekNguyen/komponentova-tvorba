<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - komponentova_tvorba</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/komponentova_tvorba.styles.css" asp-append-version="true" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
  <header>
      <nav class="navbar navbar-expand-sm navbar-light bg-light shadow rounded">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold text-success" asp-area="" asp-controller="Home" asp-action="Index">
          <i class="bi bi-book"></i> Půjčovna knih
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a class="nav-link text-success" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house"></i> Domov
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-success" asp-area="" asp-controller="Loans" asp-action="Index">
                <i class="bi bi-box-arrow-in-right"></i> Půjčky
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-success" asp-area="" asp-controller="Authors" asp-action="Index">
                <i class="bi bi-person-lines-fill"></i> Seznam autorů
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-success" asp-area="" asp-controller="Books" asp-action="Index">
                <i class="bi bi-journal-bookmark"></i> Seznam knih
              </a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-success" href="https://github.com/MirekNguyen/komponentova-tvorba" target="_blank">
                <i class="bi bi-github"></i> Dokumentace
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="footer bg-light text-success py-4">
    <div class="container text-center">
      <p class="mb-2">&copy; 2024 - Půjčovna knih</p>
      <p class="mb-0 small">
        Stránku vytvořil <strong>Mirek Nguyen</strong>
      </p>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
<style>
  .navbar {
    background-color: #f5f5dc;
    /* Light beige for a warm feel */
    border-radius: 10px;
    /* Smoothly rounded corners */
  }

  .navbar-brand {
    font-family: 'Georgia', serif;
    /* Classic book-like font */
    color: #2d6a4f !important;
    /* Darker green for the brand */
  }

  .navbar-nav .nav-link {
    font-size: 1.1rem;
    /* Slightly larger text */
    font-weight: 500;
    color: #2d6a4f !important;
    /* Match theme */
  }

  .nav-link:hover {
    text-decoration: underline;
    color: #1b4332 !important;
    /* Slightly darker green */
  }
</style>

</html>
