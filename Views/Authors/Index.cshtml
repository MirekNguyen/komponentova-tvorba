@model komponentova_tvorba.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Authors</h2>
    <a asp-action="Create" class="btn btn-primary">Create New Author</a>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Fullname</th>
          <th>BirthDate</th>
          <th>Age</th>
          <th>is alive</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var author in Model.Authors)
        {
        <tr>
          <td>@author.Id</td>
          <td>@author.Fullname</td>
          <td>@author.BirthDate</td>
          <td>@author.Age()</td>
          <td>@author.isAlive()</td>
        </tr>
        }
      </tbody>
    </table>
</div>
